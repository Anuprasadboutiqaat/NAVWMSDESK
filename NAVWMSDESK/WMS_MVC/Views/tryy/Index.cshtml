<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        height: 400,
        columns: [
            {field: "CLSNAME"},
            {field: "CLSFLAG"},
            {field: "CLSSTATUS"},
            {command: [ "edit" , "destroy"], width: 180 }
        ],
        toolbar: ["create"],
        dataSource: {
            type: "webapi", 
            transport: {
                idField: "CLASSID",
                read: {
                     url: "/api/WMS_CLASS_EDITOR"
                }, 
				create: { 
					url: "/api/WMS_CLASS_EDITOR"
				},
				update: { 
					url: "/api/WMS_CLASS_EDITOR/{0}"
				},
				destroy: { 
					url: "/api/WMS_CLASS_EDITOR/{0}"
				}
