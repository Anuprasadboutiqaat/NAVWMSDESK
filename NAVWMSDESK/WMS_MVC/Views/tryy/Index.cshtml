            schema: {
                data: "Data",
                total: "Total", 
                errors: "Errors",
                model: {
                    id: "CLASSID",
					fields: {
						CLASSID: { type: "number"},
						CLSNAME: { type: "string"},
						CLSFLAG: { type: "string"},
						CLSSTATUS: { type: "number"}
					}
                }
            },
            serverPaging: true,
            serverSorting: true,
            serverFiltering: true,
            serverGrouping: true,
            serverAggregates: true,
        },
        columnMenu: true,
        editable: "inline",
        pageable: true,
        filterable: true,
        scrollable: true
