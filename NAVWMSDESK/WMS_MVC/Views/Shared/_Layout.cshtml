            var DEPTNAME = '@Request.RequestContext.HttpContext.Session["DEPTNAME"]';
            var UserName = '@Request.RequestContext.HttpContext.Session["UserName"]';


            $('#usrname').text(UserName);
            $('#Rollname').text(Rollname);
            $('#deptname').text(DEPTNAME);
