    <script>

        $(document).ready(function (e) {
            var DEPTCODE = '@Request.RequestContext.HttpContext.Session["DEPTCODE"]';
            var DEPTNAME = '@Request.RequestContext.HttpContext.Session["DEPTNAME"]';
            var ROLLCODE = '@Request.RequestContext.HttpContext.Session["ROLLCODE"]';
